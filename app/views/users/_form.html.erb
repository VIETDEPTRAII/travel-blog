<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', object: @user %>
      <%= form_with model: @user, class:'shadow p-3 mb-5 bg-info text-white,', local: true do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: 'Enter your email' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: 'Enter your password' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: 'Enter your password again' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= link_to 'Return article list', articles_path, class: "btn btn-secondary btn-lg mr-5" %>
          <%= f.submit(f.object.new_record? ? "Create account" : "Update account", class: "btn btn-success btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
