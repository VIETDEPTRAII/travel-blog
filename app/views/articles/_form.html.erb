<div class="container">
  <%= render 'shared/errors', object: @article %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with model: @article, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <%= f.text_field :title, class: "form-control col-10" %>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <%= f.text_area :description, rows: 10, class: "form-control col-10" %>
        </div>

        <div class="form-group row">
          <%= f.submit "Submit", class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to 'Return to articles listing', articles_path %>
  </div>
</div>
