<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', object: @category %>
      <%= form_with model: @category, class:'shadow p-3 mb-5 bg-info text-white,', local: true do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter category title" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= link_to 'Return article list', articles_path, class: "btn btn-secondary btn-lg mr-5" %>
          <%= f.submit f.object.new_record? ? 'Create category' : 'Update category', class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
